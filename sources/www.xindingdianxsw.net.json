{
    "name": "顶点小说",
    "url": "www.xindingdianxsw.net",
    "version": 109,
    "search": {
        "url": "https://www.xindingdianxsw.net/search.html@post->searchkey=${key}",
        "charset": "utf-8",
        "list": "#sitembox>dl",
        "name": "h3 > a",
        "author": ".book_other>span:nth-child(1)",
        "cover":"img",
        "detail": "h3 > a"
    },
    "detail": {
        "name": "meta[property=og:novel:book_name]@attr->content",
        "author": "meta[property=og:novel:author]@attr->content",
        "cover": "meta[property=og:image]@attr->content",
        "summary": "#bookintro>p:nth-child(1)",
        "status": "meta[property=og:novel:status]@attr->content",
        "update": "meta[property=og:novel:update_time]@attr->content",
        "lastChapter": "meta[property=og:novel:latest_chapter_name]@attr->content",
        "catalog": ""
    },
    "catalog": {
        "list": "#list>dl>dd",
        "name": "a",
        "chapter": "a"
    },
    "chapter": {
        "content":"#content>p:gt(0)",
        "page": "a:matches(下一页)@attr->href@match->(.+)(_)(.+)(.html)",     
        "filter": ["@div", "@script","@dt","@a","@center", "@p", "%-->>"],
        "purify": ["喜欢(.+)速度最快。","本章未完(.+)下一(.+)更精彩！"]
    }
}